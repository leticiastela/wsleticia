package decisao;

import javax.swing.JOptionPane;

public class Exercicio1 {
	public static void main(String[] args) {
		
		float valor1 = Short.parseShort(JOptionPane.showInputDialog("Digite o primeiro valor:"));
		float valor2 = Short.parseShort(JOptionPane.showInputDialog("Digite o segundo valor:"));
		String operador = JOptionPane.showInputDialog("Digite o operador matemático (+, -, / ou *):");
		float resultado = 0;
		
		if(operador != "+" || operador != "-" || operador != "/" || operador != "*")
		{
			System.out.println("Tipo de operador inválido!");
		}
		else
		{
			if(operador.equals("+"))
			{
				resultado = valor1 + valor2;
			}
			else if(operador.equals("-"))
			{
				resultado = valor1 - valor2;
			}
			else if(operador.equals("/"))
			{
				resultado = valor1 / valor2;
			}
			else
			{
				resultado = valor1 * valor2;
			}
			System.out.println("O resultado da operação é: " + resultado);
		}
		
		
		
		
	}

}
