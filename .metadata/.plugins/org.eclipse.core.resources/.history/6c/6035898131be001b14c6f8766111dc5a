package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {
	public static void main(String[] args) {
		float numeroJogador1 = 0;
		float numeroJogador2 = 0;
		do{
			numeroJogador1 = Float.parseFloat(JOptionPane.showInputDialog("Jogador 1 - Digite o número:"));
			numeroJogador2 = Float.parseFloat(JOptionPane.showInputDialog("Jogador 2 - Digite o número:"));
			while(numeroJogador1 != numeroJogador2) {
				System.out.println("O número não está correto!");
			}
			System.out.println("Parabéns, você acertou!");
		}
		while(JOptionPane.showConfirmDialog(null, "Continuar?", "Escolha uma opção", JOptionPane.YES_NO_OPTION)==0);
	}
}
