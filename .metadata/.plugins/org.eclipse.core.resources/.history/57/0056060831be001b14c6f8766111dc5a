package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {
	public static void main(String[] args) {
		float numero = Float.parseFloat(JOptionPane.showInputDialog("Jogador 1 - Digite o número:"));
		float numeroAdivinha = 0;
		do{
			System.out.println("Parabéns, você acertou!");
		}
		while(numero != numeroAdivinha) {
			JOptionPane.showConfirmDialog(null, "Continuar?", "Escolha uma opção", JOptionPane.YES_NO_OPTION)==0
		}
	}
}
