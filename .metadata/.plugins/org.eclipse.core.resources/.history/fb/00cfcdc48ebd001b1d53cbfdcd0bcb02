package decisao;

import javax.swing.JOptionPane;

public class Exercicio3 {
	public static void main(String[] args) {
		String nome = JOptionPane.showInputDialog("Informe o nome do colaborador:").toUpperCase();
		short faltas = Short.parseShort(JOptionPane.showInputDialog("Informe o número de faltas:"));
		float salario = Float.parseFloat(JOptionPane.showInputDialog("Informe o salário bruto:"));
		float salarioBruto = 0;
		float valorINSS =0;
		if(faltas == 0)
		{
			salarioBruto = salario * (float)0.2;
			if(salarioBruto <= 1100.00)
			{
				valorINSS =salarioBruto * (float)7.5;
			}
			else if(salarioBruto >= 1100.01 && salarioBruto <= 2203.48)
			{
				valorINSS = salarioBruto * (float)0.9;
			}
			else if(salarioBruto >= 2203.49 && salarioBruto <= 3305.22 )
			{
				valorINSS = salarioBruto * (float)0.12;
			}
			else
			{
				valorINSS = salarioBruto * (float)0.14;
			}
			float valorFGTS = salarioBruto * (float)0.8;
			System.out.println("Salário líquido: " + (salarioBruto-valorFGTS));
			salarioBruto = salarioBruto + valorINSS;
			System.out.println("Valor do salário bruto: " + salarioBruto);
			
		}
		else
		{
			
		}
	}
}
