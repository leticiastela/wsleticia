package repeticao;

import javax.swing.JOptionPane;

public class DesafioDo {
	public static void main(String[] args) {
		float numero = Float.parseFloat(JOptionPane.showInputDialog("Jogador 1 - Digite o número:"));
		float numeroAdivinha = 0;
		do{
			while(numero != numeroAdivinha) {
				System.out.println("O número não está correto!");
			}
			System.out.println("Parabéns, você acertou!");
		}
		while(JOptionPane.showConfirmDialog(null, "Continuar?", "Escolha uma opção", JOptionPane.YES_NO_OPTION)==0);
	}
}
